#!/bin/bash

if [ $# -ne 2 ]; then
  echo "Usage: evaluate-lman <lman AI name> <preset>" >&2
  echo "preset is 'regular' or 'new-world'" >&2
  exit 1
fi

stty raw

nohup deadline --time_limit=300 -- \
      ai --preset="$2" --evaluate=lman --lman="$1" --max_tick=100000 \
      2>/dev/null | grep '^stats'
    >/dropbox/results/lman/"$1-$(date +%Y%m%d-%H%M%S).txt" &
